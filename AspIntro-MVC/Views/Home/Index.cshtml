@using AspIntro_MVC.ViewModels
@model HomeVM
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<h1>@Model.Text</h1>
<h1>@Model.AgeOfAykhan</h1>
<h2>Students Order by Age:</h2>
<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
           <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Age</th>
            <th>Phone</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>@item.Phone</td>
            </tr>
        }
    </tbody>
</table>

<h1>Products Count:@Model.ProductsCount</h1>
<h2>Products:</h2>
<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Color</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Products)
        {
            <tr>
                <td> @item.Name </td>
                <td>@item.Price</td>
                <td>@item.Color</td>
            </tr>
            
           
        }

    </tbody>

</table>



<ul>
    @foreach (var item in Model.Students)
    {
        <li>@item</li>
    }
   
    
</ul>


<ul>
   @for (int i = 0; i < Model.Students.Count; i++)
    {
        <li>@Model.Students[i]</li>
    }

</ul>

@foreach(var item in Model.Users){
    <h3>@(item.Id+"-" +item.Age)</h3>
}

